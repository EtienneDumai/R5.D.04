<odoo>
    <record id="view_form_vehicle" model="ir.ui.view">
        <field name="name">Vehicle Form</field>
        <field name="model">rentcars.vehicle</field>
        <field name="arch" type="xml">
            <form string="vehicle">
                <header>
                    <button name="button_check_immatriculation" string="Check immatriculation" type="object"/>
                </header>
                <group>
                    <field name="model"/>
                    <field name="thumbnail" widget="image" options='{"size": [150, 140]}'/>
                    <field name="active"/>
                    <field name="date_purchased"/>
                    <field name="immatriculation" />
                    <field name="age_vehicle"/>
                    <field name="option_ids" 
                        widget="many2many_checkboxes"
                        readonly="['|',
                        ('age_vehicle', '>=', '3'),
                        ('state', '!=', 'usable')]"/>
                    <field name="garage_id"/>
                    <field name="state" />
                    <field name="repairing_status"/>
                </group>
            </form>
        </field>
    </record>
    <record id="view_list_vehicle" model="ir.ui.view">
        <field name="name">Vehicle List</field>
        <field name="model">rentcars.vehicle</field>
        <field name="arch" type="xml">
                <list decoration-success="state=='usable'" editable="bottom" create="false">
                    <field name="model"/>
                    <field name="immatriculation"/>
                    <field name="state"/>
                    <field name="date_purchased"/>
                    <field name="thumbnail" widget="image" options='{"size": [150, 140]}'/>
                    <field name="garage_city"/>
                    <field name="age_vehicle"/>
                    <field name="age_vehicle" avg="Mon Ã©tiquette" />
                </list>
        </field>
    </record>
    <record id="view_search_vehicle" model="ir.ui.view">
        <field name="name">Vehicle Filter</field>
        <field name="model">rentcars.vehicle</field>
        <field name="arch" type="xml">
            <search>
                <field name="immatriculation"/>
                <field name="model"/>
                <filter name="filter_inactive" string="Inactive" domain="[('active','=',False)]"/>
                <filter name="filter_active" string="Active" domain="[('active','=',True)]"/>
            </search>
        </field>
    </record>
</odoo>