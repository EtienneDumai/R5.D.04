<odoo>
    <record id="view_form_board" model="ir.ui.view">
        <field name="name">Board Form</field>
        <field name="model">rentsurf.board</field>
        <field name="arch" type="xml">
            <form string="board">
                <header>
                    <button name="button_check_num_inv" string="Check Numero d'inventaire" type="object"/>
                </header>
                <group>
                    <field name="model"/>
                    <field name="thumbnail" widget="image" options='{"size": [150, 140]}'/>
                    <field name="active"/>
                    <field name="date_purchased"/>
                    <field name="num_inv"/>
                    <field name="quiver_id"/>
                    <field name="board_ids" widget="many2many">
                        <list editable="bottom">
                            <field name="model"/>
                            <field name="num_inv" />
                            <field name="date_purchased" />
                            <field name="thumbnail" widget="image" options='{"size": [150, 140]}'/>
                        </list>
                    </field>
                </group>
            </form>
        </field>
    </record>
    <record id="view_list_board" model="ir.ui.view">
        <field name="name">Board List</field>
        <field name="model">rentsurf.board</field>
        <field name="arch" type="xml">
            <list>
                <field name="model"/>
                <field name="num_inv"/>
                <field name="date_purchased"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    <record id="view_search_board" model="ir.ui.view">
        <field name="name">Board Filter</field>
        <field name="model">rentsurf.board</field>
        <field name="arch" type="xml">
            <search>
                <field name="num_inv"/>
                <field name="model"/>
                <filter name="filter_inactive" string="Inactive" domain="[('active','=',False)]"/>
                <filter name="filter_active" string="Active" domain="[('active','=',True)]"/>
            </search>
        </field>
    </record>
</odoo>